@model List<Client>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <img src="https://i.pinimg.com/564x/2a/c5/60/2ac560c628f1577e6db6ade2117ce828.jpg" alt="logo" style="width:350px"/>
    <h1 class="display-4" style="font-family:Georgia">MyRestaurant</h1>
    <h6 style="font-family:'Montserrat'">RESERVATIONS MADE EASY</h6>
    <div class="row" style="padding-top:150px">
        <div class="col-md-7" style="position: relative">
            <div style="width: 640px;position: absolute;top:50%">
                <h5 >With just a few clicks, you can easily reserve a table at your favorite restaurant and enjoy a delicious meal with your loved ones. </h5>
            </div>
        </div>
        <div class="col-md-3">
            <img src="https://images.unsplash.com/photo-1528605248644-14dd04022da1?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1170&q=80" style="width:500px" />
        </div>
    </div>

        <div class="row" style="padding-top:50px">
        <div class="col-md-5">
            <img src="https://images.unsplash.com/photo-1599458252573-56ae36120de1?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1170&q=80" style="width:500px" />
        </div>
        <div class="col-md-7" style="position: relative">
            <div style="width: 640px;position: absolute;top:50%">
                <h5 >Browse through our list of restaurants and select the perfect date and time for your reservation </h5>
            </div>
        </div>
    </div>

    <div class="row" style="padding-top:50px">
        <div class="col-md-7" style="position: relative">
            <div style="width: 640px;position: absolute;top:50%">
                <h5 > you'll never have to worry about long wait times or busy phone lines again. Book your table now and experience the convenience and ease of our restaurant reservation website. </h5>
            </div>
        </div>
        <div class="col-md-3">
            <img src="https://images.unsplash.com/photo-1575390130709-7b5fee2919e4?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1170&q=80" style="width:500px" />
        </div>
    </div>

    <div class="row py-5">
        <div class="col-md-2"></div>
        <div class="col-md-4">
            <h5>Join us now!</h5>
        </div>
        <div class="col-md-2 ">
            <div class="border border-dark rounded">
                <a href="../Home/Signin" style="text-decoration:none;color:black"> Sign in</a>
            </div>
        </div>
        <div class="col-md-2">
            <div class="border border-dark rounded">
            <a href="../Home/Signup" style="text-decoration:none;color:black"> Sign up</a>
            </div>
        </div>
        <div class="col-md-2"></div>
    </div>
</div>
