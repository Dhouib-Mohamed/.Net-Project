@model Client

@{
    ViewBag.Title = "Sign up";
}

@using( Html.BeginForm("Signup","Home",FormMethod.Post))
{
    <div class="container register" style="height:2000px">
        <div class="row">
            <div class="col-md-3 register-left">
                <img src="" alt="logo" />
                <h3 style="height:30px">Welcome</h3>
                <p>
                    You are a few clicks away from creating your account 
                    <br />
                </p>
            </div>
            <div class="col-md-9 ">
                <ul class="nav nav-tabs nav-justified" id="myTab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="home-tab" data-toggle="tab" href="../Home/Signup" role="tab" aria-controls="home" aria-selected="true">Sign up</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="profile-tab" data-toggle="tab" href="../Home/Signin" role="tab" aria-controls="profile" aria-selected="false">Sign in</a>
                    </li>
                </ul>
                <div class="tab-content" id="myTabContent">
                    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                        <div style="height:25px"></div>
                        <h3 class="register-heading">Register</h3>
                        <div class="row register-form">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.TextBoxFor(e => e.Name, new { @class = "form-control", placeholder = "Full Name *" })
                                    @Html.ValidationMessageFor(e => e.Name)
                                </div>
                                <div class="form-group">
                                    @Html.TextBoxFor(e => e.email, new { @class = "form-control", placeholder = "Your Email *" })
                                    @Html.ValidationMessageFor(e => e.email)
                                </div>
                            
                                <div class="form-group">
                                    @Html.TextBoxFor(e => e.password, new { id = "password", @class = "form-control", placeholder = "Password *" })
                                    @Html.ValidationMessageFor(e => e.password)
                                </div>
                                <div class="form-group">
                                    @Html.TextBoxFor(e => e.phoneNumber, new { @class = "form-control", placeholder = "Your Phone number *" })
                                    @Html.ValidationMessageFor(e => e.phoneNumber)

                                </div>
                                <div style="height:30px"></div>
                                <input type="submit" class="btnRegister" value="Sign up" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <script type="text/javascript">
            $(function () {
                var msg = '@ViewData["result"]';
                if (msg == '1') {
                    alert("User Details Inserted Successfully");
                    window.location.href = "@Url.Action("Signup", "Home")";
                }
            });
        </script>
        
    </div>
}
