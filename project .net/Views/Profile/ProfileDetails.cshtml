@model Client
@{
    ViewData["Title"] = "Profile details";
}

@using (Html.BeginForm("Edit", "Profile", new { id = @Model.Id }, FormMethod.Post))
{
    <div class="container register" style="height:2000px">
        <div class="row">
            <div class="tab-pane fade show active" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                <h3 class="register-heading">Profile Details</h3>
                <div class="row register-form">
                    <div class="col-md-6">
                        <div class="form-group">
                            <input type="text" name="Name" class="form-control" value="@Model.Name">
                        </div>
                        <br/>
                        <div class="form-group">
                            <input type="text" name="email" class="form-control" value="@Model.email">
                        </div>
                        <br/>
                        <div class="form-group">
                            <input type="text" name="password" class="form-control" value="@Model.password">
                        </div>
                        <br/>
                        <div class="form-group">
                            <input type="tel" name="phone" class="form-control" value="@Model.phoneNumber">
                        </div>
                        <br/>
                        <div class="row">
                        <div class="col-md-3">
                            <input type="submit" class="btnLogin btn btn-dark" value="Edit profile" />
                        </div>
                            <div class="col-md-3"> <button class="btn btn-dark" asp-area="" asp-controller="Profile" asp-action="History">Reservations History</button>
                            </div>
                        </div>
                        <br/>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<div class="card">
  <div class="card-header">
        <div class="row justify-content-between">
            <div class="col-3">
                <h5>Profile:</h5>
            </div>
            <div class="col-1">
                <a href="../Profile/Edit" class="btn btn-sm ">Edit</a>
            </div>
         </div>
   </div>
  <div class="card-body">
      <ul class="list-group list-group-flush">
        <li class="list-group-item">Name: @Model.Name</li>
        <li class="list-group-item">E-mail: @Model.email</li>
        <li class="list-group-item">Password: @Model.password</li>
        <li class="list-group-item">Phone number: @Model.phoneNumber</li>
      </ul>
  </div>

</div>

