
@{

    ViewData["Title"] = "book";
}


@using (Html.BeginForm("book", "Restaurant", FormMethod.Post,new {id=@ViewBag.id}))
{
    <div class="container register" style="height:1000px">
        <div class="row justify-content-around">
            <div class="col-6 register-right">
                <img src="https://th.bing.com/th/id/OIP.JTP6LBby17V-rMBE2q6fZwHaE9?pid=ImgDet&rs=1" alt="logo" height="300px" />
                <h3 style="height:30px">Welcome To Our Restaurant </h3>
            </div>
            <div class="col-6 " >
               
                <div class="tab-content" id="myTabContent">
                   
                        <div class="row register-form">
                            <div class="col">
                                <div class="row form-group">
                                    <p style="font-size: 20px">DATE</p>
                                    <input type="datetime" name ="Date" class="form-control">
                                </div>
                                <div class="row form-group">
                                    <p style="font-size: 20px">NOMBRE DE PLACE</p>
                                    <input type="number" name ="Places" class="form-control">

                                </div>

                                
                                <div style="height:30px"></div>
                                <input type="submit" class="btnRegister" value="valider" />
                            </div>
                        
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <script type="text/javascript">
            $(function () {
                var msg = '@ViewData["Valider"]';
                if (msg == '1') {
                    alert("you have made reservation Successfully");
                    window.location.href = "@Url.Action("book", "Restaurant")";
                }
            });
        </script>

    
}
