
@model  Restaurant
@{
    ViewData["Title"] = "detail restaurant";
}

<div class="card" style="width: 18rem;">
    <img class="card-img-top" src=@Model.image alt="Card image cap">
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        @foreach (var cate in Model.categories)
        {
            <p class="card-text">Category : @cate.Name </p>
        }
        <a href="/Restaurant/book/@Model.Id"><button class="btn btn-primary"> Book </button> </a>
        
        
    </div>
</div>